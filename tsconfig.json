{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "outDir": "dist/",
        "baseUrl": "src/",
        "paths": {
            "*": [
                "node_modules"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.test.ts"
    ]
}